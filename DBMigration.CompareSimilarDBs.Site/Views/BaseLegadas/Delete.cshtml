@model DBMigration.CompareSimilarDBs.Data.BaseLegada

@{
    ViewData["Title"] = "Exclusão";
    Layout = "_LayoutSeco";
}
<div>
    @if (ViewBag.PossuiComparacoes > 0)
    {
        <div class="alert alert-danger" role="alert">
            Esta base possui @ViewBag.PossuiComparacoes comparação(ões) cadastrada(s).<br />
            Se confirmado, todas as comparações serão excluídas junto com a base.
        </div>
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StatusMigracao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusMigracaoNavigation.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LinkRespostorio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LinkRespostorio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tamanho)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tamanho)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataUltimaEstatistica)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataUltimaEstatistica)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar exclusão" class="btn btn-danger" />
    </form>
</div>
