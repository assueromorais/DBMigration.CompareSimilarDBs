@model DBMigration.CompareSimilarDBs.Data.BaseLegada

@{
    ViewData["Title"] = "Nova base legada";
    Layout = "_LayoutSeco";
}

<h1>Nova base legada</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusMigracao" class="control-label"></label>
                <select asp-for="StatusMigracao" class="form-control" asp-items="ViewBag.StatusMigracao"></select>
                <span asp-validation-for="StatusMigracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkRespostorio" class="control-label"></label>
                <input asp-for="LinkRespostorio" data-toggle="tooltip"  title="Inclua aqui o link para o repositório do GIT." class="form-control" /> <a href="https://gitlab.brctotal.com/brctotal/brc.migracao.ssis/-/branches" target="_blank">(link p/ Git BRC)</a>
                <span asp-validation-for="LinkRespostorio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tamanho" class="control-label"></label>
                <input asp-for="Tamanho" class="form-control" />
                <span asp-validation-for="Tamanho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataUltimaEstatistica" class="control-label"></label>
                <input asp-for="DataUltimaEstatistica" class="form-control" />
                <span asp-validation-for="DataUltimaEstatistica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index"><i class="fas fa-arrow-left" title="Voltar"></i></a> | <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
