@model DBMigration.CompareSimilarDBs.Data.BaseLegada

@{
    ViewData["Title"] = "Editar";
    Layout = "_LayoutSeco";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label asp-for="StatusMigracao" class="control-label"></label>
                <select asp-for="StatusMigracao" class="form-control" asp-items="ViewBag.StatusMigracao"></select>
                <span asp-validation-for="StatusMigracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span data-toggle="tooltip" title="Inclua aqui o link para o repositório do GIT.">
                    <label asp-for="LinkRespostorio" class="control-label"></label>
                    <input asp-for="LinkRespostorio" class="form-control" />  <a href="https://gitlab.brctotal.com/brctotal/brc.migracao.ssis/-/branches" target="_blank">link p/ Git BRC</a>
                </span>
                <span asp-validation-for="LinkRespostorio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="#" onclick="window.history.back();"><i class="fas fa-arrow-left" title="Voltar"></i></a> |
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
