@model DBMigration.CompareSimilarDBs.Data.ComparacaoBases

@{
    ViewData["Title"] = "Nova comparação";
    Layout = "_LayoutSeco";
}

<div class="alert alert-primary" role="alert">
    Ao criar uma comparação sistema irá compilar um projeto SQL do Visual Studio utilizando as strings de conexão das bases selecionadas.
</div>
<div class="text-danger">
    @Html.ValidationSummary(false)
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="BaseFonte" class="control-label"></label>
                <select asp-for="BaseFonte" class="form-control" asp-items="ViewBag.BaseFonte"></select>
            </div>
            <div class="form-group">
                <label asp-for="BaseAlvo" class="control-label"></label>
                <select asp-for="BaseAlvo" class="form-control" asp-items="ViewBag.BaseAlvo"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
