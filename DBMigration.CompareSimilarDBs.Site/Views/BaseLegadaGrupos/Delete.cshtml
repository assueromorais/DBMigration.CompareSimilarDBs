@model DBMigration.CompareSimilarDBs.Data.BaseLegadaGrupo

@{
    ViewData["Title"] = "Exclusão";
    Layout = "_LayoutSeco";
}
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeGrupo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeGrupo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConnectionStringLegadas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConnectionStringLegadas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrefixoNomeBaseLegadas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrefixoNomeBaseLegadas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegexNomeTabelasDescartar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegexNomeTabelasDescartar)
        </dd>
    </dl>

    @if (ViewBag.PossuiComparacoes > 0)
    {
        <div class="alert alert-danger" role="alert">
            Esta base possui @ViewBag.PossuiComparacoes comparação(ões) cadastrada(s).<br/>
            Se confirmado, todas as comparações serão excluídas junto com a base.
        </div>
    }
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar exclusão" class="btn btn-danger" />
    </form>
</div>
